{
  "extends": null,
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "sourceMap": true,

    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "forceConsistentCasingInFileNames": true,
    "newLine": "lf"
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}


